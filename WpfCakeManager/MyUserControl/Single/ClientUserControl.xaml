<baseUserControl:BaseUserControl x:Class="WpfCakeManager.MyUserControl.ClientUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfCakeManager.MyUserControl"
             xmlns:baseUserControl="clr-namespace:WpfCakeManager.MyUserControl"
             mc:Ignorable="d" Height="50" Width="100" >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label FontSize="5" Grid.Row="0" Grid.Column="0">Nom :</Label>
        <TextBlock x:Name="ClientNameTxtB" Text="{Binding Client.Name}" Grid.Row="0" Grid.Column="1"/>
        <Label FontSize="5" Grid.Row="1" Grid.Column="0">Téléphone :</Label>
        <TextBlock x:Name="ClientPhoneTxtB" Text="{Binding Client.Phone}" Grid.Row="1" Grid.Column="1"/>
        <Label FontSize="5" Grid.Row="2" Grid.Column="0">Email :</Label>
        <TextBlock x:Name="ClientMailTxtB" Text="{Binding Client.Mail}" Grid.Row="2" Grid.Column="1"/>
    </Grid>
</baseUserControl:BaseUserControl>